---
interface Props {
  href?: string;
}

const { href = "/" } = Astro.props;
---

<a
  href={href}
  class="relative inline-flex items-center gap-1 focus-visible:outline-2 focus-visible:outline-red-500 outline-offset-2 text-gray-600 hover:text-black text-base transition-colors duration-200 ease-out-expo hover:text-neutral-1200"
>
  <svg
    aria-hidden="true"
    xmlns="http://www.w3.org/2000/svg"
    width="18"
    height="18"
    viewBox="0 0 24 24"
  >
    <path
      fill="currentColor"
      d="M20 11v2H8v2H6v-2H4v-2h2V9h2v2zM10 7H8v2h2zm0 0h2V5h-2zm0 10H8v-2h2zm0 0h2v2h-2z"
    />
  </svg>

  <span>Back</span>

  <div
    class="absolute min-w-12 w-full h-12 top-1/2 left-0 -translate-y-1/2 [@media(pointer:fine)]:hidden"
  />
</a>

